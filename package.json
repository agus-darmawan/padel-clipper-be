{
  "name": "padel-clipper-be",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/bin/www.ts",
    "dev:debug": "tsx watch --inspect src/bin/www.ts",
    "build": "npx tsc && tsc-alias",
    "start": "node dist/bin/www.js",
    "start:prod": "NODE_ENV=production node dist/bin/www.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix --unsafe src/ && biome format src/",
    "format": "biome format src/",
    "typecheck": "npx tsc --noEmit",
    "prepare": "lefthook install",
    "commit": "git-cz"
  },
  "packageManager": "pnpm@10.6.2",
  "dependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/multer": "^1.4.13",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "lefthook": "^1.11.16",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.4",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "@types/socket.io": "^3.0.2",
    "globals": "^16.2.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "padel",
    "clipper",
    "system",
    "backend"
  ],
  "author": "@agus-darmawan",
  "contributors": [
    "@agus-darmawan"
  ],
  "license": "Proprietary License"
}
